@model SearchViewModel

@{
    ViewData["Title"] = " | Search Results";
}

<div class="row">
    <div class="col">
        <h1 class="mb-2">@Model.Header</h1>
    </div>
    <div class="col">
        <div class="float-right pr-2">
            <a asp-action="Index">New Search</a>
        </div>
    </div>
</div>

<table class="table">
    <tbody>
        @foreach (var bean in Model.Beans)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Bean"
                       asp-area="" asp-route-id="@bean.BeanId"
                       asp-route-slug="@bean.Name.Slug()">@bean.Name</a>
                </td>
                <td>@bean.Country.Name</td>
                <td>
                    @foreach (CoffeeOrigin co in bean.CoffeeOrigins)
                    {
                        <div>@co.Origin.FullName</div>
                    }
                </td>
                <td>
                    <div class="float-right">
                        <a asp-action="Edit" asp-route-id="@bean.BeanId"
                           class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@bean.BeanId"
                           class="btn btn-primary">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
