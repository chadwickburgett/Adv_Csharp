@model CountryListViewModel
@{
    ViewData["Title"] = "Olympic Games";
}
<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Games</h3>
        <div class="list-group">
            @foreach (Game gm in Model.Games)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@gm.GameID"
                   asp-route-activeCat="@Model.ActiveCat"
                   asp-route-activeSport="@Model.ActiveSport"
                   class="list-group-item
                       @Model.CheckActiveGame(gm.GameID)">@gm.Name</a>
                }
        </div>
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            @foreach (Category cat in Model.Categories)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@Model.ActiveGame"
                   asp-route-activeCat="@cat.CategoryId"
                   asp-route-activeSport="@Model.ActiveSport"
                   class="list-group-item
                       @Model.CheckActiveCat(cat.CategoryId)">@cat.Name</a>
                }
        </div>
        <h3 class="mt-3">Sport</h3>
        <div class="list-group">
            @foreach (Sport sp in Model.Sports)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@Model.ActiveGame"
                   asp-route-activeCat="@Model.ActiveCat"
                   asp-route-activeSport="@sp.SportID"
                   class="list-group-item
                       @Model.CheckActiveSport(sp.SportID)">@sp.Name</a>
                }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country cntry in Model.Countries)
            {
                <li class="list-inline-item">
                    <form asp-action="Details" method="post">
                        <button type="submit" class="bg-white border-0">
                            <img src="~/images/@cntry.FlagImage" alt="@cntry.Name"
                                 title="@cntry.Name | @cntry.Game.Name @cntry.Category.Name @cntry.Sport.Name" />
                        </button>

                        <input type="hidden" asp-for="@cntry.CountryID" />
                        <input type="hidden" asp-for="ActiveGame" />
                        <input type="hidden" asp-for="ActiveCat" />
                        <input type="hidden" asp-for="ActiveSport" />
                    </form>
                </li>
            }
        </ul>
    </div>
</div>