@model TicketingViewModel
@{
    
}
<div class="row">
    <div class="col-sm-2">
        <form asp-action="Filter" method="post">
            <div class="form-group">
                <label>Status:</label>
                <select name="filter" class="form-control"
                        asp-items="@(new SelectList(Model.Statuses,
                    "StatusId", "Name", Model.Filters.StatusId))">
                    <option value="all">All</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="Index" asp-route-id="" class="btn btn-primary">Clear</a>
        </form>
    </div>
    <div class="col-sm-10">

        <a asp-action="Add"><b>Add new ticket</b></a>

        <table class="table table-bordered table-striped mt-2">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Sprint Number</th>
                    <th>Point Value</th>
                    <th>Status</th>
                    <th class="w-25"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Ticketing ticket in Model.Ticket)
                {
                <tr>
                    <td>@ticket.Name</td>
                    <td>@ticket.Description</td>
                    <td>@ticket.SprintNumber</td>
                    <td>@ticket.PointValue</td>
                    <td>
                        <form asp-action="Edit" method="post"
                              asp-route-id="@Model.Filters.FilterString"
                              class="mr-2">

                            <input type="hidden"
                                   name="@nameof(Ticketing.Id)" value="@ticket.Id" />

                            <button type="submit"
                                    name="@nameof(Ticketing.StatusId)" value="closed"
                                    class="btn btn-primary btn-sm">
                                Done
                            </button>

                            <button type="submit"
                                    class="btn btn-primary btn-sm">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>