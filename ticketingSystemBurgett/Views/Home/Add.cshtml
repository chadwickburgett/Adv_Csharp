@model Ticketing

@{ ViewData["Title"] = $"{ViewBag.Operation} Ticketing"; }

<h1 class="display-4">@ViewBag.Operation New Ticket</h1>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PointValue"></label>
        <input asp-for="PointValue" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SprintNumber"></label>
        <input asp-for="SprintNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StatusId"></label>
        <select asp-for="StatusId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Status, "StatusId", "Name"))"></select>
    </div>

    @if (ViewBag.Operation == "Edit")
    {
<input type="hidden" asp-for="Id" />}

    <button type="submit" class="btn btn-dark">@ViewBag.Operation</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Cancel</a>
</form>