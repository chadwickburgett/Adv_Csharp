@model Customer
@{
    ViewBag.Title = "Customer";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<form asp-action="Index" method="post">
    <div class="form-group row">
        <div class="col-sm-2"><label>Name:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.Name" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Address:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="Address"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Address"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Phone Number:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="Phone"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Phone"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Email Address:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="EmailAddress"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="EmailAddress"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Age:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.Age" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Age" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Contact Method:</label></div>
        <div class="col-sm-4">
            <select>
                <option value=””>Select One</option>
                <option value=””>Phone</option>
                <option value=””>Email</option>
                <option value=””>Surface Mail</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>